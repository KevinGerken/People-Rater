<% include ../partials/header %>
<section>
  <h1><%=human.firstName%> <%=human.lastName%></h1>
  <h4><%=human.city%>, <%=human.state%></h4>
  <h2><%=human.averageStars%></h2>
  <img src="<%=human.image%>" alt="<%=human.imgAlt%>">
  <% for(comment of human.comments) {%>
    <hr>
    <h1><%= comment.stars %></h1>
    <img src="<%= comment.author.image %>" alt="<%= comment.author.imageAlt%>">
    <h4><%=comment.author.username%></h4>
    <h4><%=moment(comment.createdAt).fromNow()%></h4>
    <hr>
    <p>
      <%= comment.comment %>
    </p>
    <%if(currentUser && comment.author.id.equals(currentUser._id)) {%>
    <a href="/humans/<%=human._id%>/comments/<%=comment._id%>/edit">
      Edit Comment
    </a>
    <%}%>
    <hr>
    <p>Added on: <%=moment(human.createdAt).format(`MMMM Do YYYY`)%></p>
  <%}%>
  <nav>
    <a href="/humans">
      Back
    </a>
    <a href="/humans/<%=human._id%>/comments/new">
      Add Review
    </a>
    <% if(currentUser && human.addedBy.id.equals(currentUser._id)) {%>    
      <a href="/humans/<%=human._id%>/edit">
        Edit
      </a>
    <%}%>
  </nav>
</section>
<% include ../partials/footer %>