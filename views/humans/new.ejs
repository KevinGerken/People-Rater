<% include ../partials/header %>
<section>
  <form action="/humans" method="POST">
    <label>
      First Name
      <input type="text" placeholder="First Name" name="human[firstName]">
    </label>
    <label>
      Last Name
      <input type="text" placeholder="Last Name" name="human[lastName]">
    </label>
    <label>
      City
      <input type="text" placeholder="City" name="human[city]">
    </label>
    <label>
      State
      <input type="text" placeholder="State" name="human[state]">
    </label>
    <label>
      Image URL
      <input type="text" placeholder="Image URL" name="human[image]">
    </label>
    <label>
      Image Description
      <input type="text" placeholder="Describe the image" name="human[imageAlt]">
    </label>
    <label>
      Person Description
      <textarea name="human[description]"></textarea>
    </label>
    <label>
      <div class="flex-container">
        <p>
          Your Review:
        </p>
        <ul class="ratings">
          <li class="rating-stars star5"><i class="fas fa-star"></i></li>
          <li class="rating-stars star4"><i class="fas fa-star"></i></li>
          <li class="rating-stars star3"><i class="fas fa-star"></i></li>
          <li class="rating-stars star2"><i class="fas fa-star"></i></li>
          <li class="rating-stars star1"><i class="fas fa-star"></i></li>
        </ul>
      </div>
      <input class="num-input" type="number" value=3 min=1 max=5 name=comment[stars]>
      <textarea placeholder="Your review here." id="comment" name=comment[comment]></textarea>
    </label>
    <button class="only-button">Submit</button>
  </form>
</section>
<% include ../partials/footer %>